<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">


        <ImageView
            android:id="@+id/imageLayanan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:cropToPadding="false"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNamaLayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Layanan"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"
                android:textSize="18sp" />



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/starIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/star"
                        android:contentDescription="icon_star"
                        android:layout_marginEnd="4dp"/>

                    <!-- TextView baru untuk rata-rata rating -->
                    <TextView
                        android:id="@+id/textRatingLayanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="0.0"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="16sp" />

                </LinearLayout>

            <TextView
                android:id="@+id/textKategoriLayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori Layanan"
                android:fontFamily="@font/poppinsregular"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />



        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>